<Window x:Class="WebDesk.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WebDesk Settings" Height="200" Width="400" 
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10">
        <Label Content="Wallpaper HTML File:"/>
        <DockPanel Margin="0,5">
            <Button Content="Browse" DockPanel.Dock="Right" Margin="5,0,0,0" Click="BrowseButton_Click"/>
            <TextBox x:Name="PathTextBox" IsReadOnly="True"/>
        </DockPanel>
        <CheckBox x:Name="AutoStartCheckBox" Content="Start with Windows" Margin="0,10"/>
        <Button Content="Save" Click="SaveButton_Click" Margin="0,20" Width="100"/>
    </StackPanel>
</Window>